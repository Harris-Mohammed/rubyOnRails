<div class="container">
<h2>Add New Author</h2>

<%= form_for :authers, url: authers_path do |f| %>

    <div class="form-group">
    <%= f.label :fname %>
    <br />
    <%= f.text_field :fname, class:'form-control' %>
    <br />
    </div>

    <div class="form-group">
    <%= f.label :iname %>
    <br />
    <%= f.text_field :iname, class:'form-control' %>
    <br />
    </div>
    
    <div class="form-group">
    <%= f.label :bio %>
    <br />
    <%= f.text_field :bio, class:'form-control' %>
    <br />
    </div>
    

    <%= f.submit "Submit", class:'btn btn-primary' %>
    <%=link_to "Cancel", authers_path, class:'btn btn-default' %>
    <% end %>
    </div>

    